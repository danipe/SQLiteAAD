<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.familia.sqliteaad.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="estudiantes"
                android:layout_gravity="center"
                android:onClick="estudiantes"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="consultar estudiantes"
                android:layout_gravity="center"
                android:onClick="mostrarEstudiantes"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="25dp"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="profesores"
                android:layout_gravity="center"
                android:onClick="profesores"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="consultar profesores"
                android:layout_gravity="center"
                android:onClick="mostrarProfesores"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:padding="25dp"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asignaturas"
                android:layout_gravity="center"
                android:onClick="asignaturas"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="consultar asignaturas"
                android:layout_gravity="center"
                android:onClick="mostrarAsignaturas"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="borrar bd"
            android:onClick="eliminarBD"/>
    </LinearLayout>

</LinearLayout>
